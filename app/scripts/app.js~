var sukuApp = angular.module('sukuApp', ['ngRoute']);
sukuApp.config(['$routeProvider', function($routeProvider){
    $routeProvider.when('/classrooms', {
        templateUrl: 'views/classrooms.html',
        controller: 'SKClassroomsCtrl as classroomsCtrl'
    }).when('/classrooms/:id', {
        templateUrl: 'views/classroom.html',
        controller: 'SKClassroomCtrl as classroomCtrl',
        resolve:{
            core_models_loaded: ['$q', '$location', 'ModelLoaderService', function ($q, $location, ModelLoader){
                return;
                return ModelLoader.load().then(
                    function (){},
                    function (error){
                        $location.path('/');
                        $location.replace();
                        return $q.reject(error);
                    }
                );
            }]
        }
    }).when('/tests', {
        templateUrl: 'views/tests.html',
        controller: 'SKTestsCtrl as testsCtrl',
        resolve:{
            core_models_loaded: ['$q', '$location', 'ModelLoaderService', function ($q, $location, ModelLoader){
                return;
                return ModelLoader.load().then(
                    function (){},
                    function (error){
                        $location.path('/');
                        $location.replace();
                        return $q.reject(error);
                    }
                );
            }]
        }
    }).when('/tests/:id', {
        templateUrl: 'views/test.html',
        controller: 'SKTestCtrl as testCtrl',
        resolve:{
            core_models_loaded: ['$q', '$location', 'ModelLoaderService', function ($q, $location, ModelLoader){
                return;
                return ModelLoader.load().then(
                    function (){},
                    function (error){
                        $location.path('/');
                        $location.replace();
                        return $q.reject(error);
                    }
                );
            }]
        }
    }).when('/login', {
        templateUrl:'views/login.html'
    });
    $routeProvider.otherwise({
        redirectTo:'/classrooms'
    });
}]);